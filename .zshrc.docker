# -*- mode: sh -*-

alias d='docker'
alias dc='docker-compose'
alias dm='docker-machine'

alias alpine='docker run -it --rm alpine:3.5 /bin/sh'
alias centos='docker run -it --rm centos:7 /bin/bash'
alias ubuntu='docker run -it --rm ubuntu:16.04 /bin/bash'

function dbu() {
    docker build -t $1 .
}

# http://qiita.com/rosylilly/items/08f4c0771e2ca92a72aa
function docker-clean() {
    docker rm $(docker ps -a -q)
    docker rmi $(docker images -f "dangling=true" -q)
}
